  </option>
  <!-- The type of the player e.g. human, computer etc.. -->
  <option>
    <name>PlayerType2</name>
    <value>Target</value>
    <defaultvalue>Human</defaultvalue>
  </option>
  <!-- The type of the player e.g. human, computer etc.. -->
  <option>
    <name>PlayerType3</name>
    <value>Target</value>
    <defaultvalue>Human</defaultvalue>
  </option>
  <option>
    <name>PlayerType4</name>
    <value>Target</value>
    <defaultvalue>Human</defaultvalue>
  </option>
  <option>
    <name>PlayerType5</name>
    <value>Target</value>
    <defaultvalue>Human</defaultvalue>
